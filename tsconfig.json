{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": false,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": ["src/**/*", "generated"],
  "exclude": ["dist", "node_modules", "tests"]
}
